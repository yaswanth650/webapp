            "include": [
                {
                    "url": "tomcaturl"
                }
            ],
            "exclude": [
                {
                    "url": "tomcaturllogout"
                }
            ]
        }
    },
    "logging": {
        "enabled": true,
        "file": "/data/burp_scan_results.log"
    }
}
